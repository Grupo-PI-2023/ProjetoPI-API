generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Comissao {
  id               String   @id
  name             String
  email            String   @unique
  senha            String
  cpf              String
  instituicao      String
  certificado      String?
  turno            String
  lattes           String
  adm              Boolean?
  organizador      Boolean?
  avaliador        Boolean?
  chair            Boolean?
  areaConhecimento Area[]
  Event            Event?
}

model Area {
  id         String    @id
  nome       String
  evento     Event     @relation(fields: [eventoId], references: [id])
  Comissao   Comissao? @relation(fields: [comissaoId], references: [id])
  comissaoId String?
  eventoId    String
}

model Aluno {
  id           String   @id
  name         String
  email        String   @unique
  senha        String
  cpf          String
  instituicao  String
  certificado  String?
  periodo      String
  curso        String
  autor        Boolean
  apresentador Boolean?
  presenca     Boolean?
}

model Event {
  id               String   @id
  nomeEvento       String
  descricao        String
  emailEvento      String   @unique
  tipo             String
  assuntoPrincipal String
  local            String  
  cep              String
  horarioInicio    String
  horarioFim       String
  dataInicio       DateTime?
  dataFinal        DateTime?
  privado          Boolean
  anais            Boolean
  certificados     Boolean
  logo             String?
  periodo          String
  createdAt        DateTime @default(now())
  comissao         Comissao @relation(fields: [comissaoId], references: [id])
  comissaoId       String   @unique
  Area             Area[]
}

model Sala{
  id               String   @id
  andar            Int
  tipo             String
  numero           Int      @unique
  limitePessoas    Int
  temaSala         String
}

